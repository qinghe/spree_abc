<% content_for :page_title do %>
  <%= Spree.t('site.index') %> 
<% end %>
  <table class="index" >
    <colgroup>
       <col style="width: 25%;">
       <col style="width: 28%;">
       <col style="width: 25%;">
       <col style="width: 20%;">
    </colgroup>
        <thead>
          <th><%= Spree::Site.human_attribute_name(:name) %></th>
          <th><%= Spree::Site.human_attribute_name(:domain) %></th>
          <th><%= Spree.user_class.human_attribute_name(:email) %></th>
          <th><%= Spree::Site.human_attribute_name(:created_at) %></th>
        </thead>
        <tbody>
          <%- @sites.each do |site|%>
          <tr>
            <td ><%= site.name %></td>
            <td ><%= site.subdomain %></td>
            <td ><%= site.users.admin.first.email %></td>
            <td ><%= pretty_time site.created_at %></td>
            <td class="actions">
              <%= link_to_with_icon 'eye', Spree.t(:admin_store), site.admin_url, {:target=>'_blank',:no_text => true} %>

            </td>
          </tr>
          <% end %>
        </tbody>
  </table>
            
<%= paginate @sites %>



