<h4><%= t("add_product_customization_types") %></h4>
<table class="index">
  <tr>
    <th><%= t("name") %></th>
    <th><%= t("presentation") %></th>
    <th><%= t("description") %></th>
    <th>&nbsp;</th>
  </tr>
  <% @available_product_customization_types.each do |ct| %>
  <tr>
    <td><%=ct.name %></td>
    <td><%=ct.presentation %></td>
    <td><%=ct.description %></td>
    <td class="actions"><%= link_to icon('add') + ' ' + t("select"),
                            url_for(:controller => "admin/product_customization_types",
                                    :id => ct,
                                    :product_id => @product.permalink,
                                    :action => "select",
                                    :product_customization_type_id =>  ct),
                           :remote => true, :class => 'iconlink' %>
    </td>
  </tr>
  <% end %>
  <% if @available_product_customization_types.empty? %>
  <tr>
    <td colspan="3"><%= t('none_available') %></td>
  </tr>
  <% end %>
</table>
