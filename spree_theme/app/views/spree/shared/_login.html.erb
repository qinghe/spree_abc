<%= form_for Spree::User.new, :as => :spree_user, :url => spree.create_new_session_path, :html=>{ :class=> 'fullwidth' } do |f| %>
  <div id="password-credentials">
    <p>
      <%= f.label :email, Spree.t(:email) %><br/>
      <%= f.email_field :email, :class => 'title', :tabindex => 1 %>
    </p>
    <p>
      <%= f.label :password, Spree.t(:password) %><br/>
      <%= f.password_field :password, :class => 'title', :tabindex => 2 %>
    </p>
  </div>
  <p class="box-check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, Spree.t(:remember_me) %>
  </p>

  <p><%= f.button Spree.t(:login), :class => 'button primary', :tabindex => 3 %></p>
<% end %>