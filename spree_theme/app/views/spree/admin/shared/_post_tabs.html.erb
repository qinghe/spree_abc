<% content_for :page_title do %>
   <%= link_to  Spree.t("posts"), admin_posts_path %> / <%= @post.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_post_tabs">
      <%= content_tag :li, :class => ('active' if current == 'Post Details') do %>
        <%= link_to_with_icon 'edit', Spree.t(:post_details),edit_admin_post_url(@post) %>
      <% end if can?(:admin, Spree::Post) %>

      <%= content_tag :li, :class => ('active' if current == 'Post Files') do %>
        <%= link_to_with_icon 'picture', Spree.t(:post_files), admin_post_files_url(@post) %>
      <% end if can?(:admin, Spree::PostFile) %>

  </ul>

<% end %>
