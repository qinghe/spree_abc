<%= render partial: 'spree/admin/shared/post_tabs', locals: {current: 'Post Details'} %>

<% content_for :page_actions do %>
  <% if can?(:create, Spree::Product) %>
      <%= button_link_to Spree.t(:new_post), new_object_url, { class: "btn-success", :icon => 'plus', :id => 'admin_new_post' } %>
  <% end %>
<% end %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @post } %>

<%= form_for([:admin, @post]) do |f| %>
    <%= render "form", :form => f %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>
