<% content_for :page_title do %>
   <%= link_to  Spree.t("template_texts"), admin_template_texts_path %> / <%= @template_text.name %>
<% end %>

<% content_for :page_actions do %>
  <% if can?(:create, Spree::TemplateText) %>
      <%= button_link_to Spree.t(:new_template_text), new_object_url, { class: "btn-success", :icon => 'plus', :id => 'admin_new_template_text' } %>
  <% end %>
<% end %>

<%= render "spree/shared/error_messages", :target => @template_text %>

<%= form_for [:admin, @template_text] do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
<% end %>
