<%= render :partial => 'sub_menu' %>
<% content_for :page_actions do %>  
  <li><%= button_link_to Spree.t("template_text.new"), new_object_url, :icon => 'plus' %></li>
<% end %>

<%= render :partial=>'tabs',:locals=>{:current=>"TemplateText"}%>

<% if @template_texts.any? %>
<table class="index">
  <colgroup>
    <col style="width: 70%" />
    <col style="width: 20%" />
  </colgroup>
  <thead>
    <tr>
      <th><%= Spree::TemplateText.human_attribute_name(:name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @template_texts.each do |page| %>
      <tr class="<%= cycle('odd', 'even') %>" id="<%= dom_id page %>">
        <td>
          <%= page.name %>
        </td>
        <td  class="actions">
          <%= link_to_edit page, :no_text => true %>
          <%= link_to_delete page, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: I18n.t(:other, scope: 'activerecord.models.spree/template_text')) %>,
    <%= link_to Spree.t(:add_one), spree.new_admin_template_text_path %>!
  </div>
<% end %>