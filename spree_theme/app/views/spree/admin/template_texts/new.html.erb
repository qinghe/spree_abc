<% content_for :page_title do %>
  <%= Spree.t("new_template_text") %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_template_text_list), spree.admin_template_texts_url, :icon => 'arrow-left' %>
<% end %>

<%= render "spree/shared/error_messages", :target => @template_text %>

<%= form_for [:admin, @template_text]  do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <%= render :partial => 'spree/admin/shared/new_resource_links' %>
<% end %>
