<% @body_id = 'signup' %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="header3"><%= Spree.t(:new_customer) %></h3>
  </div>
  <div id="new-customer" class="panel-body" data-hook="login">
    <%= form_for Spree::User.new, :as => :spree_user, :url => spree.registration_path(@user) do |f| %>
      <div data-hook="signup_inside_form">
        <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
        <p><%= f.button Spree.t(:create), :class => 'button primary' %></p>
      </div>
    <% end %>
    <div class="text-center">
    <%= Spree.t(:or) %> <%= link_to Spree.t(:login_as_existing), spree.login_path %>
    </div>
    <div data-hook="login_extras"></div>
  </div>
</div>
