<% wrapped_post = @template.related_posts( @current_page, data_source: Spree::PageLayout::DataSourceEnum.next_post ).first  %>
<dl><dt><%= Spree.t('post.next')%></dt>
    <dd><% if wrapped_post.present? %>  
          <%= content_tag(:a, wrapped_post.title, { href: wrapped_post.path })  %>
        <% else %>
          <%= Spree.t('post.no_next')%>  
        <% end %>        
    </dd>
</dl>

