<%= render :partial => 'spree/blogs/admin/shared/post_tabs', :locals => {:current => "Post Files"} %>

<% content_for :page_actions do %>
  <li><%= link_to_with_icon('plus', Spree.t(:new_post_file), new_admin_post_file_url(@post), :id => 'new_image_link', :class => 'button') %></li>
<% end %>

<div id="images" data-hook> </div>
<% unless @post.files.any?  %>
  <div class="no-objects-found">
    <%= Spree.t(:no_post_files_found) %>.
  </div>
<% else %>

  <table class="index sortable" data-sortable-link="<%= update_positions_admin_post_files_url(@post) -%>">
    <colgroup>
      <col style="width: 5%">
      <col style="width: 10%">
      <col style="width: 45%">
      <col style="width: 15%">
    </colgroup>

    <thead>
      <tr>
        <th colspan="2"><%= Spree.t(:thumbnail) %></th>
        <th><%= Spree.t("alt_text") %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @post.files.each do |image| %>
        <tr id="<%= spree_dom_id image %>" data-hook="images_row" class="<%= cycle('odd', 'even')%>">
        <td class="no-border">
          <span class="handle"></span>
        </td>
        <td> <%= link_to(image_tag(image.url_thumb), image.attachment.url(:large)) %></td>
        <td><%= image.alt %></td>
        <td class="actions">
            <%= link_to_with_icon('edit', Spree.t("edit"), edit_admin_post_file_url(@post, image), :no_text => true, :data => {:action => 'edit'}) %>
            &nbsp;
            <%= link_to_delete image, {:url => admin_post_file_url(@post, image), :no_text => true  }%>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
