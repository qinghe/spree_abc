<% content_for :page_title do %>
   <%= Spree.t("edit_post") %> &ldquo;<%= @post.title %>&rdquo;
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_post_list), admin_posts_url, :icon => 'arrow-left' %></li>
  <% if can?(:create, Spree::Product) %>
    <li id="new_post_link">
      <%= button_link_to Spree.t(:new_post), new_object_url, { :icon => 'plus', :id => 'admin_new_post' } %>
    </li>
  <% end %>
<% end %>

<% if @post.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @post %>
<% end %>

<%= form_for([:admin, @post]) do |f| %>
  <%= render "form", :form => f %>
  
  <%= render :partial => 'spree/admin/shared/edit_resource_links' %>

<% end %>
